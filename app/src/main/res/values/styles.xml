<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <!-- Customize your theme here. -->
    </style>

    <!-- Application theme. -->
    <style name="SOSTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/SOSActionBarStyle</item>
    </style>

    <style name="SOSActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/actionbar_background_color</item>
        <item name="android:titleTextStyle">@style/SOSActionBarTitleText</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="SOSActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/sos_title_text_size</item>
        <item name="android:textColor">@color/actionbar_text_color</item>
    </style>
</resources>
